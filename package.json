{
  "name": "personal-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check-types": "tsc",
    "fmt": "prettier --write 'src/**/*.{ts,tsx,scss}'",
    "lint": "eslint --ext=ts,tsx ./src",
    "lint:fix": "eslint --fix --ext=ts,tsx ./src",
    "test": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --coverage --runInBand --colors",
    "test:nocover": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "verify": "yarn lint && yarn check-types && yarn test"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.0",
    "bootstrap": "^4.5.3",
    "devicon": "^2.2.0",
    "next": "10.0.3",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-google-recaptcha": "^2.1.0",
    "react-transition-group": "^4.4.1",
    "reactstrap": "^8.7.1",
    "sass": "^1.29.0",
    "typescript-stdlib": "^0.2.1",
    "validator": "^13.5.1"
  },
  "devDependencies": {
    "@shiphub/eslint-config": "^0.0.3",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/react-google-recaptcha": "^2.1.0",
    "@types/react-transition-group": "^4.4.0",
    "@types/reactstrap": "^8.7.2",
    "@types/validator": "^13.1.1",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.14.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,scss,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 100
  }
}
